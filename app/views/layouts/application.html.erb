<!DOCTYPE html>
<html>
<head>
  <title>Shouter</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<% flash.each do |key, value| %>
<div id="flash_<%= key%>">
<%= value %> 
<%= link_to_function 'Close', visual_effect(:fade, "flash_#{key}") %>
</div>	
	<% end %>	
	
	<P align = "right">	  	
	<% if signed_in? %>
	  <%= gravatar current_user, 25%>	
	  <%= link_to "Sign out", sign_out_path, :method => :delete %> 
	<% end %>
	</p>
	<center> <h1> SushiShouter </h1> </center>

	<%= yield %>

</body>
</html>
